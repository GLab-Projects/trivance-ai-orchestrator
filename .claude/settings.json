{
  "env": {
    "TRIVANCE_ENV": "local"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(*)",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(node *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(docker *)",
      "Bash(kubectl *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(rm *)",
      "Bash(mv *)",
      "Bash(cp *)",
      "Bash(chmod *)",
      "Bash(ps *)",
      "Bash(kill *)",
      "Bash(lsof *)",
      "Bash(cd *)",
      "Bash(diff *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(git push*)",
      "Write(/etc/**)",
      "Write(~/.ssh/**)",
      "Write(~/.gnupg/**)",
      "Edit(/etc/**)",
      "Edit(~/.ssh/**)",
      "Edit(~/.gnupg/**)",
      "Bash(nc *)",
      "Bash(netcat *)",
      "Bash(nmap *)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Write(/usr/bin/**)",
      "Write(/usr/sbin/**)",
      "Bash(rm -r *)",
      "Bash(mv * /dev/null)",
      "Bash(dd *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -fd *)",
      "Bash(npm install -g *)",
      "Bash(kill -9 *)",
      "Bash(killall *)"
    ],
    "disableBypassPermissionsMode": "disable"
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT_TYPE=PreToolUse bash .claude/hooks/ai-discipline-engine.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT_TYPE=PreToolUse bash .claude/hooks/ai-discipline-engine.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT_TYPE=PostToolUse bash .claude/hooks/ai-discipline-engine.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT_TYPE=Stop bash .claude/hooks/ai-discipline-engine.sh"
          }
        ]
      }
    ]
  }
}
